<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>sample.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProController</servlet-name>
        <servlet-class>sample.searchcontroller.SearchProController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProController</servlet-name>
        <servlet-class>sample.deletecontroller.DeleteProController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProController</servlet-name>
        <servlet-class>sample.updatecontroller.UpdateProController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProController</servlet-name>
        <servlet-class>sample.createcontroller.CreateProController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProController</servlet-name>
        <servlet-class>sample.controller.ViewProController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProController</servlet-name>
        <url-pattern>/SearchProController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProController</servlet-name>
        <url-pattern>/DeleteProController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProController</servlet-name>
        <url-pattern>/UpdateProController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProController</servlet-name>
        <url-pattern>/CreateProController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProController</servlet-name>
        <url-pattern>/ViewProController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Dynamic Connection</description>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
